 <% if flash[:notice] %>
   <div class="flash">
    <%= flash[:notice] %>
   </div>
<% end %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", "/books/#{book.id}",class: "show_#{book.id}" %></td>
			<td><%= link_to "Edit", edit_book_path(book.id),class: "edit_#{book.id}" %></td>
			<td><%= link_to "Destroy", "/books/#{book.id}",method: :delete,class: "destroy_#{book.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
<div class= "field"><h4>Title</h4>
<%= f.text_field :title,class: "book_title" %>
</div>
<div class= "field"><h4>Body</h4>
<%= f.text_area :body,class: "book_body" %>
</div>
<div class= "field"><%= f.submit 'Create Book' %>
</div>


<% end %>